#include <iostream>
#include <vector>
#include <algorithm>
#include <math.h>
int power(int base,int exp);
int main() 
{
    int n,count=0,reminder,sum=0;
    std::vector<int>v;
    std::cout<<"enter number"<<std::endl;
    std::cin>>n;
    int temp=n;
    while(n!=0)
    {
        count++;
        n/=10;
    }
    n=temp;
    while(n!=0)
    {
        reminder=n%10;
        v.push_back(power(reminder,count));
        n/=10;
    }
    for (int i = 0; i < v.size(); i++)
    {
        sum+=v[i];
    }
    if(sum==temp)
    {
        std::cout<<"the number "<<temp<<" is armstrong"<<std::endl;
    }
    else
    {
        std::cout<<"the number "<<temp<<" is not armstrong"<<std::endl;
    }
    return 0;
}

int power(int base,int exp)
{
    int i=1;
    while(exp--)
    {
        i*=base;
    }
    return i;
}