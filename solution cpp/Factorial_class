#include <iostream>
#include <vector>
#include <algorithm>
#include <math.h>

class Factorial
{
    private:
        int fact;
        int num;
    public:
        Factorial(int cp_cnum);
        int calc_factorial();
};
Factorial::Factorial(int cp_num):num(cp_num),fact(1){}
int Factorial::calc_factorial()
{
    for (int i = num; i > 0; i--)
    {
        fact = fact * i;
    }
    return fact;
}


int main() 
{
    Factorial obj(7);
    int ret=obj.calc_factorial();
    std::cout<<"factorial of 7 is "<<ret<<std::endl;
    return 0;
}

