#include <iostream>
#include <vector>
#include <fstream>
#include <cstdio>
using namespace std;


class CsvReader
{
    private:
        ofstream fout;
        ifstream fin;
    public:
        CsvReader(string file_name):fout(file_name),fin(file_name){}
        void Csv_Write(string str)
        {
            fout<<str;
            fout<<"\n";
            fout.flush(); 
        }
        void Csv_Read(vector<string>& v)
        {
            
            string temp;
            while(fin>>temp)
            {
                v.push_back(temp);
            }
        }
};
class Student
{
    private:
        int age;
        string class_of_student;
        string name_of_student;
    public:
        Student(int cp_age,string& cp_class_of_student,string cp_name_of_student):
        age(cp_age),
        class_of_student(cp_class_of_student),
        name_of_student(cp_name_of_student){}
        void Display()const
        {
            cout<<"student name : "<<name_of_student<<" "<<"student class "<<class_of_student<<" "<<"age : "<<age<<endl;
        }
}; 

int main() 
{
    int age;
    string class_of_student,name_of_student;
    vector<string>v;
    CsvReader obj("file.txt");
    obj.Csv_Write("25");
    obj.Csv_Write("IMT_ITIDA");
    obj.Csv_Write("Mohanad_Mohamed");
    obj.Csv_Read(v);
    sscanf(v[0].c_str()," %d ",&age);
    class_of_student = v[1];
    name_of_student  = v[2];
    Student obj2(age,class_of_student,name_of_student);
    obj2.Display();
    return 0;
}